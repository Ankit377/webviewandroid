<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:colorBackground">@color/white</item>

    </style>


    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="android:textColorPrimary">@color/grey_60</item>
    </style>
    <style name="BootomSheetTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/actionbarcolor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:state_selected">true</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>

        <item name="android:textSize">14sp</item>
    </style>


    <style name="BigTextStyle">
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NormalTextStyle">
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textSize">18sp</item>
    </style>



    <style name="ButtonTextStyle">
        <item name="android:background">@drawable/green_rounded_coronor</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:paddingLeft">@dimen/margin_72</item>
        <item name="android:paddingRight">@dimen/margin_72</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size1</item>
        <item name="android:tint">@color/gray</item>
    </style>


    <style name="match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>



    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
